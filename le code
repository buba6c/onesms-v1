  <script>
        const defaultConfig = {
            logo_text: "One SMS",
            nav_topup: "Top Up",
            nav_account: "Account",
            nav_history: "History",
            search_service_placeholder: "Search service...",
            country_selection_title: "Country selection",
            popular_services_title: "Popular services",
            activation_title: "Activation",
            rent_title: "Rent",
            steps_title: "Steps",
            step1_title: "Select service and country",
            step2_title: "Copy the number for registration",
            step3_title: "Enter the code received",
            background_color: "#fafafa",
            surface_color: "#ffffff",
            text_color: "#1a1a1a",
            primary_action_color: "#667eea",
            secondary_action_color: "#5568d3",
            font_family: "system-ui",
            font_size: 16
        };

        async function onConfigChange(config) {
            const customFont = config.font_family || defaultConfig.font_family;
            const baseFontStack = '-apple-system, BlinkMacSystemFont, "Inter", "Segoe UI", sans-serif';
            const baseSize = config.font_size || defaultConfig.font_size;
            
            // Update text content
            document.getElementById('logo-text').textContent = config.logo_text || defaultConfig.logo_text;
            document.getElementById('nav-topup').textContent = config.nav_topup || defaultConfig.nav_topup;
            document.getElementById('nav-account').textContent = config.nav_account || defaultConfig.nav_account;
            document.getElementById('nav-history').textContent = config.nav_history || defaultConfig.nav_history;
            document.getElementById('search-service-input').placeholder = 'üîç ' + (config.search_service_placeholder || defaultConfig.search_service_placeholder);
            document.getElementById('country-selection-title').textContent = config.country_selection_title || defaultConfig.country_selection_title;
            document.getElementById('popular-services-title').textContent = config.popular_services_title || defaultConfig.popular_services_title;
            document.getElementById('activation-title').textContent = config.activation_title || defaultConfig.activation_title;
            document.getElementById('rent-title').textContent = config.rent_title || defaultConfig.rent_title;
            document.getElementById('steps-title').textContent = config.steps_title || defaultConfig.steps_title;
            document.getElementById('step1-title').textContent = config.step1_title || defaultConfig.step1_title;
            document.getElementById('step2-title').textContent = config.step2_title || defaultConfig.step2_title;
            document.getElementById('step3-title').textContent = config.step3_title || defaultConfig.step3_title;

            // Update colors
            const bgColor = config.background_color || defaultConfig.background_color;
            const surfaceColor = config.surface_color || defaultConfig.surface_color;
            const textColor = config.text_color || defaultConfig.text_color;
            const primaryColor = config.primary_action_color || defaultConfig.primary_action_color;
            const secondaryColor = config.secondary_action_color || defaultConfig.secondary_action_color;

            document.body.style.backgroundColor = bgColor;
            
            document.querySelectorAll('.header, .sidebar, .feature-card, .steps-section').forEach(el => {
                el.style.backgroundColor = surfaceColor;
            });

            document.querySelectorAll('.logo, .card-title, .steps-header, .section-title, .country-name, .service-label, .step-title').forEach(el => {
                el.style.color = textColor;
                el.style.fontFamily = `${customFont}, ${baseFontStack}`;
            });

            document.querySelectorAll('.action-btn').forEach(btn => {
                btn.style.backgroundColor = primaryColor;
            });

            document.querySelector('.mode-option.active').style.backgroundColor = primaryColor;
            
            document.querySelectorAll('.step-number').forEach(num => {
                num.style.backgroundColor = primaryColor;
            });

            document.querySelectorAll('.availability-badge').forEach(badge => {
                badge.style.backgroundColor = primaryColor;
            });

            // Font sizes
            document.getElementById('logo-text').style.fontSize = `${baseSize * 1.25}px`;
            document.querySelectorAll('.card-title, .steps-header').forEach(el => {
                el.style.fontSize = `${baseSize * 1.5}px`;
            });
            document.querySelectorAll('.step-title').forEach(el => {
                el.style.fontSize = `${baseSize * 0.9375}px`;
            });
            document.querySelectorAll('.nav-item, .search-box, .feature-item, .step-desc, .country-name, .service-label').forEach(el => {
                el.style.fontFamily = `${customFont}, ${baseFontStack}`;
                el.style.fontSize = `${baseSize * 0.875}px`;
            });
        }

        // Show toast notification
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2500);
        }

        // Mode toggle
        const activationMode = document.getElementById('activation-mode');
        const rentMode = document.getElementById('rent-mode');

        activationMode.addEventListener('click', () => {
            activationMode.classList.add('active');
            rentMode.classList.remove('active');
        });

        rentMode.addEventListener('click', () => {
            rentMode.classList.add('active');
            activationMode.classList.remove('active');
        });



        // Activation Flow
        let timerInterval;
        let timeRemaining = 1200; // 20 minutes in seconds

        function startActivation() {
            document.getElementById('landing-view').style.display = 'none';
            document.getElementById('activation-view').style.display = 'block';
            
            // Start timer
            startTimer();
            
            // Simulate SMS arrival after 8 seconds
            setTimeout(() => {
                receiveSMS();
            }, 8000);
        }

        function startTimer() {
            const progressCircle = document.getElementById('timer-progress-circle');
            const timerValue = document.getElementById('timer-value');
            const circumference = 2 * Math.PI * 45;
            
            timerInterval = setInterval(() => {
                timeRemaining--;
                
                const minutes = Math.floor(timeRemaining / 60);
                const seconds = timeRemaining % 60;
                timerValue.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                
                const progress = (timeRemaining / 1200) * circumference;
                progressCircle.style.strokeDashoffset = circumference - progress;
                
                if (timeRemaining <= 0) {
                    clearInterval(timerInterval);
                    showToast('‚ùå Time expired');
                }
            }, 1000);
        }

        function receiveSMS() {
            const statusBanner = document.querySelector('.status-banner');
            const statusIcon = document.querySelector('.status-icon');
            const statusTitle = document.querySelector('.status-title');
            const statusSubtitle = document.querySelector('.status-subtitle');
            const codeSection = document.getElementById('code-section');
            const finishBtn = document.getElementById('finish-btn');
            
            // Update status
            statusBanner.classList.remove('waiting');
            statusBanner.classList.add('success');
            statusIcon.textContent = '‚úì';
            statusTitle.textContent = 'SMS Received!';
            statusSubtitle.textContent = 'Your verification code is ready';
            
            // Show code
            codeSection.style.display = 'block';
            
            // Show finish button
            finishBtn.style.display = 'block';
            
            showToast('‚úì SMS code received!');
        }

        function copyToClipboard(text, btnId) {
            navigator.clipboard.writeText(text).then(() => {
                const btn = document.getElementById(btnId);
                const originalText = btn.innerHTML;
                btn.innerHTML = '<span class="copy-icon">‚úì</span><span>Copied!</span>';
                btn.style.backgroundColor = '#52c41a';
                
                setTimeout(() => {
                    btn.innerHTML = originalText;
                    btn.style.backgroundColor = '';
                }, 2000);
                
                showToast('‚úì Copied to clipboard');
            });
        }

        function cancelActivation() {
            if (timerInterval) {
                clearInterval(timerInterval);
            }
            
            document.getElementById('activation-view').style.display = 'none';
            document.getElementById('landing-view').style.display = 'block';
            
            // Reset timer
            timeRemaining = 1200;
            document.getElementById('timer-value').textContent = '20:00';
            
            // Reset status
            const statusBanner = document.querySelector('.status-banner');
            statusBanner.classList.add('waiting');
            statusBanner.classList.remove('success');
            document.querySelector('.status-icon').textContent = '‚è≥';
            document.querySelector('.status-title').textContent = 'Waiting for SMS';
            document.querySelector('.status-subtitle').textContent = 'The code will appear here automatically';
            
            // Hide code section
            document.getElementById('code-section').style.display = 'none';
            document.getElementById('finish-btn').style.display = 'none';
            
            showToast('Activation cancelled');
        }

        // Event listeners
        document.getElementById('get-number-btn').addEventListener('click', startActivation);
        
        document.getElementById('copy-number-btn').addEventListener('click', () => {
            const number = document.getElementById('virtual-number').textContent;
            copyToClipboard(number, 'copy-number-btn');
        });
        
        document.getElementById('copy-code-btn').addEventListener('click', () => {
            const code = document.getElementById('sms-code').textContent;
            copyToClipboard(code, 'copy-code-btn');
        });
        
        document.getElementById('cancel-btn').addEventListener('click', cancelActivation);
        
        document.getElementById('finish-btn').addEventListener('click', () => {
            cancelActivation();
            showToast('‚úì Activation completed successfully');
        });

        if (window.elementSdk) {
            window.elementSdk.init({
                defaultConfig,
                onConfigChange,
                mapToCapabilities: (config) => ({
