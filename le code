                    ["search_service_placeholder", config.search_service_placeholder || defaultConfig.search_service_placeholder],
                    ["country_selection_title", config.country_selection_title || defaultConfig.country_selection_title],
                    ["popular_services_title", config.popular_services_title || defaultConfig.popular_services_title],
                    ["activation_title", config.activation_title || defaultConfig.activation_title],
                    ["rent_title", config.rent_title || defaultConfig.rent_title],
                    ["steps_title", config.steps_title || defaultConfig.steps_title],
                    ["step1_title", config.step1_title || defaultConfig.step1_title],
                    ["step2_title", config.step2_title || defaultConfig.step2_title],
                    ["step3_title", config.step3_title || defaultConfig.step3_title]
                ])
            });
        }
